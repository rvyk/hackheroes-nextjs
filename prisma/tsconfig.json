{
  "ts-node": {
    "compilerOptions": {
      "allowJs": true,
      "skipLibCheck": true,
      "strict": true,
      "noEmit": true,
      "esModuleInterop": true,
      "moduleResolution": "bundler",
      "resolveJsonModule": true,
      "isolatedModules": true,
      "incremental": true,
      "paths": {
        "@/*": ["../src/*"]
      }
    },
    "include": ["**/*.ts"]
  }
}
